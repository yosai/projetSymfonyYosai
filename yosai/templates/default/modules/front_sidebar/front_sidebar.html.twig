<!-- CATEGORIES START -->
<h2 class="no-top-space">Categories</h2>
<ul class="nav sidebar-categories margin-bottom-40">
{% for category in categories %}
    {% set active_slug = [category.object.slug] %}
    {% if category.children is defined %}
        {% for child in category.children %}
            {% set active_slug = active_slug|merge([child.object.slug]) %}
        {% endfor %}
    {% endif %}

    <li class="{% if app.request.get('slug') in active_slug %}active{% endif %}"><a href="{{ path('front_category', {slug:category.object.slug}) }}">{{ category.object.name }} ({{ category.count }})</a></li>
{% endfor %}
</ul>
<!-- CATEGORIES END -->

<!-- BEGIN RECENT NEWS -->
<h2>Recent News</h2>
<div class="recent-news margin-bottom-10">
    {% for article in articles %}
    <div class="row margin-bottom-10">
        <div class="col-md-3">
            <img class="img-responsive" alt="" src="{{ asset('/templates/modules/admin_articles_manager/cover/' ~ article.cover) }}">
        </div>
        <div class="col-md-9 recent-news-inner">
            <h3><a href="{{ path('front_article', {category: categories_hashed[article.categoryId].slug, slug: article.slug}) }}">{{ article.name }}</a></h3>
            <p>{{ article.text|truncate(50, true) }}</p>
        </div>
    </div>
    {% endfor %}
</div>
<!-- END RECENT NEWS -->

