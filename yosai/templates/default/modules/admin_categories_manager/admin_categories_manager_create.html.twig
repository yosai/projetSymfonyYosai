{% set back_link = path('admin_content', {options:"categories"}) %}

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Create a category</h2>
                <div class="nav navbar-right">
                    <a href="{{ back_link }}" class="btn btn-default">Go back</a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form class="form-horizontal form-label-left" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Name <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" name="name" required="required" class="form-control col-md-7 col-xs-12" value="{% if category is defined %}{{ category.name }}{% endif %}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Parent
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select name="parent" class="form-control col-md-7 col-xs-12">
                                <option value="">No parent</option>
                                {% for option in categories if category is not defined or (category is defined and option.id != category.id) %}
                                <option value="{{ option.id }}" {% if category is defined and category.parentId == option.id %}selected="selected"{% endif %}>{{ option.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ back_link }}" class="btn btn-primary" type="button">Cancel</a>
                            <button class="btn btn-primary" type="reset">Reset</button>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
