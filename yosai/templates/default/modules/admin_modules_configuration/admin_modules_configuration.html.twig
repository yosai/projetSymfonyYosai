<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Configurable modules</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Settings 1</a>
                            </li>
                            <li><a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                {% for module in modules %}
                {% set action = "%s-configuration"|format(module.name) %}

                <article class="media event row no-overflow">
                    <div class="col-md-7">
                        <div class="media-body">
                            <a class="title">{{ module.displayName }} <small>v{{ module.version }}</small></a>
                            <p>{{ module.description }}</p>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <a href="{{ path('admin_modules', {options:action}) }}" class="btn btn-default pull-right"><i class="fa fa-cogs blue"></i> Configuration</a>
                    </div>
                </article>
                {% if not loop.last %}<hr>{% endif %}
                {% else %}
                <p class="text-center">No configurable modules installed.</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
